<wpml-config>
	<custom-types>
        <custom-type translate="1">wpzoom_rcb</custom-type>
    </custom-types>
    <admin-texts>
        <key name="wpzoom-recipe-card-settings">
            <key name="wpzoom_rcb_settings_author_custom_name" />
            <key name="wpzoom_rcb_settings_details_title" />
            <key name="wpzoom_rcb_settings_ingredients_title" />
            <key name="wpzoom_rcb_settings_equipment_title" />
            <key name="wpzoom_rcb_settings_steps_title" />
            <key name="wpzoom_rcb_settings_video_title" />
            <key name="wpzoom_rcb_settings_notes_title" />
            <key name="wpzoom_rcb_settings_nutrition_title" />
            <key name="wpzoom_rcb_settings_instagram_cta_title" />
            <key name="wpzoom_rcb_settings_instagram_cta_subtitle" />
            <key name="wpzoom_rcb_settings_pinterest_cta_title" />
            <key name="wpzoom_rcb_settings_pinterest_cta_subtitle" />
            <key name="wpzoom_rcb_settings_facebook_cta_title" />
            <key name="wpzoom_rcb_settings_facebook_cta_subtitle" />
            <key name="wpzoom_rcb_settings_jump_to_recipe_text" />
            <key name="wpzoom_rcb_settings_print_recipe_text" />
            <key name="wpzoom_rcb_settings_recipe_prevent_sleep_label" />
            <key name="wpzoom_rcb_settings_recipe_prevent_sleep_description" />

			<key name="wpzoom_rcb_settings_servings_title" />
			<key name="wpzoom_rcb_settings_preptime_title" />
			<key name="wpzoom_rcb_settings_cookingtime_title" />
			<key name="wpzoom_rcb_settings_totaltime_title" />
			<key name="wpzoom_rcb_settings_calories_title" />			
			
         </key>
    </admin-texts>
	<gutenberg-blocks>
		<gutenberg-block type="wpzoom-recipe-card/block-recipe-card" translate="1">
			<key name="recipeTitle" />
			<key name="summary" />
			<key name="course">
			</key>
			<key name="cuisine">
			</key>
			<key name="difficulty">
			</key>
			<key name="details">
				<key name="*">
					<key name="label" />
					<key name="unit" />
				</key>
			</key>
			<key name="ingredientsTitle" />
			<key name="ingredients">
				<key name="*">
					<key name="name">
					</key>
					<key name="parse">
						<key name="unit" />
					</key>
				</key>
			</key>
			<key name="videoTitle" />
			<key name="directionsTitle" />
			<key name="steps">
				<key name="*">
					<key name="text">
					</key>
				</key>
			</key>
			<key name="notesTitle" />
			<key name="notes">
			</key>
		</gutenberg-block>
	</gutenberg-blocks>
</wpml-config>